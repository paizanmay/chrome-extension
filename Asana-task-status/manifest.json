{
	"manifest_version": 2,
	"name": "Asana task status",
	"version": "0.0.1",
	"background": { "scripts": ["jquery-2.0.0.min.js", "background.js", "firebase.js"] },
	"browser_action": {
		"default_icon": "asana_icon.png"
		// "default_popup": "popup.html"
	},
	"permissions" : ["tabs","https://app.asana.com/"],
	"content_scripts":[{
		"matches":["https://app.asana.com/*"],
		"js":["jquery-2.0.0.min.js", "firebase.js", "content_script.js"]
	}],
	"content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"

}
